# API
APP_NAME=                   # Name the API for debug stuff
JWT_SECRET=                 # Generate a long JWT secret (40 char+)
PORT=                       # TCP port for the API, 3000 by default
ORIGIN=                     # Origin (URL) of the API for CORS
ADMINS_ID=                  # ID of the admins of the API (Clarice)

# Database
DATABASE_URL=postgresql://user:pass@localhost:7000/NAME_HERE?connection_limit=5&pool_timeout=10&schema=public

# Enviroment
NODE_ENV=                   # Useless, set "development" by default

# SMTP Service (Email)
DOMAIN=                     # Email DOMAIN (Not the name of the email)
SMTP_USER=                  # SMTP Auth username
SMTP_PASS=                  # SMTP Auth password
SMTP_HOST=                  # Hostname or IP address to connect to
SMTP_PORT=                  # Port to connect
SMTP_SECURE=                # Whether the connection should use SSL (true) or not (false)

# MinIO (S3)
MINIO_ENDPOINT=             # Endpoint of the MinIO (e.g. http://localhost:9000/)
MINIO_ACCESS_KEY_ID=        # Name of the user in MinIO
MINIO_SECRET_ACCESS_KEY=    # Password of the MinIO
